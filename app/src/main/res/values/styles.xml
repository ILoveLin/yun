<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <!--font style end -->
    <style name="ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 默认水平分割线样式 -->
    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorLine</item>


    </style>

    <style name="TextTitle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/color_50b3ff</item>
        <item name="android:textSize">@dimen/padding_17</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding_45</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_10</item>


    </style>
    <!-- 默认圆角按钮样式 -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingLeft">@dimen/padding_15</item>
        <item name="android:paddingRight">@dimen/padding_15</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="android:textSize">@dimen/padding_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:foreground">@null</item>
    </style>
    <!-- 默认文本框样式 -->
    <style name="EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/padding_15</item>
        <item name="android:textColorHint">#A4A4A4</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="android:paddingLeft">@dimen/padding_10</item>
        <item name="android:paddingRight">@dimen/padding_10</item>
    </style>


    <!--分隔线 line style  start-->
    <style name="LineItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="LineItemStyleE4E4E4" parent="@style/LineItemStyle">
        <item name="android:background">#e4e4e4</item>
    </style>

    <style name="LineItemStyleE0E0E0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>

    <style name="LineItemStyleTransparent_10dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10px</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <!--横线-->
    <style name="LineItemStyleE0E0E0_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>
    <!--横线-->
    <style name="LineStyleE5E5E5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>

    <style name="Font15Style666666" parent="ww">
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">@dimen/text_font_15</item>
    </style>

    <!--横线-->
    <style name="LineStyleD9D9D9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_d9d9d9</item>
    </style>
    <!--横线-->
    <style name="LineStyleE4E4E4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_e4e4e4</item>
    </style>

    <!--竖线-->
    <style name="Style_vLine">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_e5e5e5</item>
    </style>

    <style name="Style_vLine_E0E0E0">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>
    <!--<item name="android:layout_width">match_parent</item>-->
    <!--<item name="android:layout_height">48dp</item>-->
    <!--<item name="android:layout_weight">1</item>-->
    <!--<item name="android:drawablePadding">@dimen/padding_3</item>-->
    <!--<item name="android:gravity">center</item>-->
    <!--<item name="android:clickable">true</item>-->
    <!--<item name="android:paddingTop">@dimen/padding_5</item>-->
    <!--<item name="android:textColor">@drawable/selector_color_tab_main</item>-->
    <!--<item name="android:textSize">@dimen/text_font_12</item>-->
    <style name="TabMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/padding_3</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/padding_5</item>
        <item name="android:textColor">@drawable/selector_color_tab_main</item>
        <item name="android:textSize">@dimen/text_font_12</item>
    </style>

</resources>
