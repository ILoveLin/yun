<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40"

        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_baidu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_baidu" />

        <ImageView
            android:id="@+id/iv_360"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg_360" />

        <ImageView
            android:id="@+id/iv_dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:src="@mipmap/bg_dog" />

        <ImageView
            android:id="@+id/iv_shenma"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg_shenma" />
    </RelativeLayout>

    <View style="@style/LineItemStyleE0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_54"
        android:orientation="horizontal">

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_54"
            android:background="@color/color_ffffff"
            app:xTabIndicatorColor="@color/color_21ac90"
            app:xTabIndicatorHeight="@dimen/padding_3"
            app:xTabIndicatorWidth="@dimen/padding_40"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="@color/color_21ac90"
            app:xTabSelectedTextSize="@dimen/padding_16"
            app:xTabTextColor="#333333"
            app:xTabTextSize="@dimen/padding_16" />

    </LinearLayout>


    <com.company.yun.view.widget.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5" />


</LinearLayout>