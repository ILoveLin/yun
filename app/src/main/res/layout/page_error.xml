<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_net_error_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/color_f2f2f2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/page_net_error_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:src="@mipmap/icon_error_net" />

    <TextView
        android:id="@+id/page_net_error_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:text="@string/error_net"
        android:textSize="@dimen/text_font_16" />

    <TextView
        android:id="@+id/page_net_retry"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:layout_marginTop="@dimen/padding_40"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_btn_error_net"
        android:gravity="center"
        android:text="点击重试"
        android:textColor="@drawable/selector_textview_333333"
        android:textSize="@dimen/text_font_16" />
</LinearLayout>