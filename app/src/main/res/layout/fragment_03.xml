<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_54"
        android:orientation="horizontal"
        android:weightSum="4">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/padding_54"
            android:layout_weight="1"
            android:background="@color/color_ffffff"></View>

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/padding_54"
            android:layout_weight="2"
            android:background="@color/color_ffffff"
            app:xTabIndicatorColor="@color/color_21ac90"
            app:xTabIndicatorHeight="@dimen/padding_3"
            app:xTabIndicatorWidth="@dimen/padding_40"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="@color/color_21ac90"
            app:xTabSelectedTextSize="@dimen/padding_16"
            app:xTabTextColor="#333333"
            app:xTabTextSize="@dimen/padding_16" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/padding_54"
            android:layout_weight="1"
            android:background="#ffffff"></View>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5" />


</LinearLayout>