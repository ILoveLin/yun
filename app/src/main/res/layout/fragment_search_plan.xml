<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView style="@style/LineItemStyleE0E0E0" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true">
        <!--纯滚动模式-->
        <!--app:srlEnablePureScrollMode="true"-->
        <!--刷新和加载更多设置-->
        <!--app:srlEnableAutoLoadMore="false"-->
        <!--app:srlEnableLoadMore="true"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding_160"
                    android:layout_weight="1"
                    android:src="@mipmap/bg_plan_01" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_20"
                        android:paddingTop="@dimen/padding_20"
                        android:paddingRight="@dimen/padding_10"
                        android:text="多种方式细化用户群"
                        android:textSize="@dimen/padding_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_20"
                        android:paddingTop="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:text="分析模型下钻保存分群、行为和属性自定义分群查看整体用户画像、偏好，
                深入分析单用户行为验证分群，并进一步应用于分析和触达"
                        android:textSize="@dimen/padding_14" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:orientation="horizontal">

                <com.company.yun.view.widget.ClearEditText
                    style="@style/EditTextStyle"
                    android:id="@+id/edittext_plan"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/padding_45"
                    android:layout_marginLeft="@dimen/padding_30"
                    android:layout_marginRight="@dimen/padding_20"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_editext"
                    android:hint="请输入关键字"
                    android:text="" />


                <Button
                    android:clickable="true"
                    android:id="@+id/btn_plan_search"
                    style="@style/ButtonStyle_color_21ac90"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginRight="@dimen/padding_30"
                    android:text="搜索" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding_160"
                    android:layout_weight="1"
                    android:src="@mipmap/bg_plan_03" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding_160"
                    android:layout_marginRight="@dimen/padding_10"
                    android:layout_weight="1"
                    android:src="@mipmap/bg_plan_04" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding_160"
                    android:layout_weight="1"
                    android:src="@mipmap/bg_plan_05" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding_160"
                    android:layout_weight="1"
                    android:src="@mipmap/bg_plan_06" />

            </LinearLayout>


        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>