<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">


    <com.company.yun.view.widget.SquareImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="@dimen/padding_100"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_30"
        android:src="@mipmap/ic_logo" />

    <com.company.yun.view.widget.ClearEditText
        android:id="@+id/et_login_phone"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_20"
        android:hint="请输入用户名"
        android:maxLength="11"
        android:maxLines="1" />

    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20" />

    <com.company.yun.view.widget.ClearEditText
        android:id="@+id/et_login_password"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_20"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1" />

    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginLeft="@dimen/padding_40"
        android:layout_marginRight="@dimen/padding_40" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/padding_40"
        android:layout_marginTop="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_60"
        android:text="忘记密码"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/btn_login_commit"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_40"
        android:layout_marginTop="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_40"
        android:text="登入" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>