<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_10"
    android:paddingRight="@dimen/padding_10">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relative_man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sex_man"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_40"
                android:background="@color/page_white"
                android:gravity="center"
                android:text="男" />

            <TextView
                android:visibility="gone"
                android:id="@+id/icon_sex_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_blue_right" />

            <TextView
                android:layout_marginRight="@dimen/padding_10"
                android:id="@+id/line_sex"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/sex_man"
                android:background="#e3e3e3" />


        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sex_wonman"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_40"
                android:background="@color/color_ffffff"
                android:gravity="center"
                android:text="女" />

            <TextView

                android:visibility="gone"
                android:layout_marginRight="@dimen/padding_10"
                android:id="@+id/icon_sex_wonman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_blue_right" />

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/padding_5"
        android:orientation="vertical">

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>